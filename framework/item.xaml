<Window x:Class="framework.item"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:framework"
        mc:Ignorable="d"
        Title="item" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Заголовок" Grid.Row="0"/>
        <TextBlock Text="Текст" Grid.Row="1"/>

        <TextBox x:Name="textboxName" Grid.Row="0" Grid.Column="1" Margin="10"/>
        <TextBox x:Name="textboxText" Grid.Row="1" Grid.Column="1" Margin="10"/>

        <Button x:Name="save" Grid.Column="1" Grid.Row="2" Width="auto" Content="Сохранить" Click="save_Click"/>
    </Grid>
</Window>
